<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cnkaptan.popularmovies.MovieDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#009688"
            app:cardElevation="8dp">
            <TextView
                android:id="@+id/tv_movie_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="Deneme"
                android:textSize="@dimen/text_size_xhuge"
                android:paddingLeft="@dimen/margin_medium"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingLeft="@dimen/margin_medium"
            android:paddingRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium">

            <ImageView
                android:id="@+id/iv_movie_poster"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_release_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2015"
                    android:textSize="@dimen/text_size_large"/>
                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="120min"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="italic|bold"
                    android:layout_marginTop="@dimen/margin_small"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8.1/10"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/margin_small"/>
                <Button
                    android:id="@+id/bt_mark_favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favourite_button_text"
                    android:background="@color/favourite_button_color"
                    android:textColor="@color/favourite_button_text_color"
                    android:layout_marginTop="@dimen/margin_small"/>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            />
    </LinearLayout>
</ScrollView>
